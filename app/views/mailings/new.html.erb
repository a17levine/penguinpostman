<body>
  <%= form_for @mailing do |f| %>
    <div class="container">
        <div id="#header-text" class="row">
            <div class="feature span12">
                <h2 id="first" class="motto hidden-on-load">Send real mail again.</h2>
                <h3 id="second" class="subheader hidden-on-load">In 30 seconds.</h3>
            </div>
        </div>
    </div>
    <div class="container">    
        <div class="row upload">
            <div id="third" class="span12 center hidden-on-load animated fadeInDown">
                <img id="postcard-image" src="/images/penguinpostman.png">
                <%= f.file_field :file_path, :id => 'upload_hidden' %>
                <a id="upload"href="#" class="signup"> <span id="type-of-file">Send an Attachment</span></a>
                <div id="helper-text" style="color: #aaa; font-size: 8px;">(Click to Upload)</div>
            </div>
        </div>
        <div id="letter-form">
            <div class="span12 contact_form">
                <!-- Lets create a CSS3 stamp -->
                <div class="hfeed" style="margin-top: 60px;">
                            <article class="entry post">
                                <header class="entry-header">
                                    <div class="stamp">
                                        <!-- the image -->
                                        <img id="pengin_flyout" style="width: 150px; float: right; margin-top: 20px; margin-right: 20px;" src="../images/penguin_flyout.png">
                                    </div>
                                </header>
                                <div class="entry-content">
                                    <div class="row">
                                        <div class="span12">

                                            <%= form_for @mailing, url: {action: "create"}, html: {class: "contact_form_from"} do |f| %>

                                                <%= f.text_field :user_firstname, :placeholder => "Maker", :style => 'width: 70px; margin-left: 50px;' %>
                                                <%= f.text_field :user_lastname, :placeholder => "Square", :style => 'width: 70px;' %><br>
                                                <%= f.text_field :user_street_1, :placeholder => "716 Congress", :style => 'width: 130px; margin-left: 50px;'%>
                                                <%= f.text_field :user_street_2, :placeholder => "#100", :style => 'width: 40px;'%><br>
                                                <%= f.text_field :user_city, :placeholder => "Austin", :style => 'width: 80px; margin-left: 50px;'%>
                                                <%= f.text_field :user_state, :placeholder => "TX", :style => 'width: 20px;'%>
                                                <%= f.text_field :user_zip, :placeholder => "78701", :style => 'width: 40px;'%><br>
                                                <%= f.text_field :user_email, :placeholder => "youremail@gmail.com", :style => 'width: 170px; margin-left: 50px;'%><br><br><br>
                                                <%= f.text_field :recipient_firstname, :placeholder => "Mr.", :style => 'width: 70px; margin-left: 400px;'%>
                                                <%= f.text_field :recipient_lastname, :placeholder => "President", :style => 'width: 70px;'%><br>
                                                <%= f.text_field :recipient_street_1, :placeholder => "1600 Penn Ave", :style => 'width: 130px; margin-left: 400px;'  %>
                                                <%= f.text_field :recipient_street_2, :placeholder => "#200", :style => 'width: 40px;'  %><br>
                                                <%= f.text_field :recipient_city, :placeholder => "Washington", :style => 'width: 80px; margin-left: 400px; margin-bottom: 30px;'  %>
                                                <%= f.text_field :recipient_state, :placeholder => "DC", :style => 'width: 20px; margin-bottom: 30px;'  %>
                                                <%= f.text_field :recipient_zip, :placeholder => "20500", :style => 'width: 40px; margin-bottom: 30px;' %>
                                            <% end %>
                                        </div>
                                    </div>
                            </article>
                        </div>
                <div class="row center">
                    <a id="submit"href="/mailings" class="signup" style="width: 200px; margin-top: 30px;"> <span id="type-of-file">Pay</span>
                    </a>
                    <br><%= f.submit "Review order", :id => 'submit_hidden' %>
                    <div id="helper-text" style="color: #aaa; font-size: 8px;">(Click to Continue)</div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</body>
</html>